@using Apolo.Core.Model.Security
@using Apolo.Core.Model
@using Apolo.Core.Model.Treatment
@{
    User patient = Session[Constants.SESSION_PATIENT] as User;
    ViewBag.Title = "Rutinas";
    var routines = ViewBag.Routines as List<Routine>;
    var currentRoutine = -1;
    foreach(var routine in routines)
    {
        if(DateTime.Now >= routine.StartDate
            && DateTime.Now <= routine.StartDate.AddDays(routine.DurationInWeeks*7))
        {
            currentRoutine = routine.ID;
        }
    }
}

@section Styles {
    @Styles.Render("~/Assets/plugins/sweetalert/css/sweetalert.css")
    @Styles.Render("~/Assets/plugins/datatables/css/datatables.min.css")
}
<div class="row clearfix">
    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-4 col-md-offset-4">
        <div class="card">
            <div class="header">
                <h2>Información Personal</h2>
            </div>
            <div class="body">
                <div class="row">
                    <div class="col-md-4">
                        <img style="width: 100%; height: 100%;" src="@Url.Action("UserAvatar", "Util", new { username = patient?.Username, area = "" })" />
                    </div>
                    <div class="col-md-8">
                        <p>@patient.FirstName @patient.LastName</p>
                        <p>@(DateTime.Now.Year - @patient.Birthday?.Year) años</p>
                        <p>@patient.Condition</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="body">
                <button type="button" class="btn bg-light-blue waves-effect newRoutineCl">Crear Nueva Rutina</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card" style="height: 80vh;">
            <div class="card body" style="height: 100%;">
                <div class="dataTables_wrapper">
                    <table id="routines-table" class="table table-hover table-responsive">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Terapeuta</th>
                                <th>Duración (Semanas)</th>
                                <th>Fecha Inicio</th>
                                <th>Fecha Fin</th>
                                <th>Avance Días</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var routine in routines)
                            {
                                <tr class="routineRowCl">
                                    <input type="hidden" value="@routine.ID" class="routineIDCl" />
                                    <td style="vertical-align:middle;">@routine.ID</td>
                                    <td style="vertical-align:middle;">@routine.Therapist.FirstName @routine.Therapist.LastName</td>
                                    <td style="vertical-align:middle;">@routine.DurationInWeeks</td>
                                    <td style="vertical-align:middle;">@string.Format("{0:dd/MM/yyyy}", routine.StartDate)</td>
                                    <td style="vertical-align:middle;">@string.Format("{0:dd/MM/yyyy}", routine.StartDate.AddDays(routine.DurationInWeeks * 7))</td>
                                    <td style="vertical-align:middle;">
                                        <div class="progress" style="margin-bottom: 0;">
                                            @if (routine.EllapsedPercentage >= 100)
                                            {
                                                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                                </div>
                                            }
                                            else if (routine.EllapsedPercentage > 0)
                                            {
                                                <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="@(routine.EllapsedPercentage)" aria-valuemin="0" aria-valuemax="100" style="width: @(routine.EllapsedPercentage)%">
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                                                </div>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <button type="button" class="btn bg-light-blue waves-effect selectCl">Seleccionar</button>&nbsp;&nbsp;
                                        <button type="button" class="btn btn-danger waves-effect deleteCl">Eliminar</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/Assets/plugins/datatables/js/datatables.min.js")
    @Scripts.Render("~/Assets/plugins/sweetalert/js/sweetalert.min.js")

    <script>
        $(function () {
            var currentRoutine = @currentRoutine;
            $(".newRoutineCl").click(function () {
                if (currentRoutine >= 0) {
                    swal(
                        'Error',
                        'Ya existe una rutina en curso',
                        'error'
                    );
                } else {
                    window.location.href = "@Url.Action("Create", "Routine", new { area = Constants.Areas.THERAPIST })";
                }
            });

            $(".deleteCl").click(function () {
                var rowEl = $(this).closest(".routineRowCl");
                var id = rowEl.find(".routineIDCl").val();
                swal({
                    title: "¿Está seguro?",
                    text: "No se podrá deshacer la eliminación de la rutina",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    confirmButtonText: "Eliminar",
                    cancelButtonText: "Cancelar",
                    closeOnConfirm: false
                }, function () {
                    $.post('@Url.Action("Delete", "Routine", new { @area = "Therapist" })',
                    {
                        routineId: id
                    },
                    function () {
                        rowEl.fadeOut(600, function() {
                            $(this).remove();
                            swal("Éxito", "Se eliminó la rutina exitosamente", "success");
                            if (id == currentRoutine) {
                                currentRoutine = -1;
                            }
                        });
                    });
                });
            });

            $(".selectCl").click(function () {
                var rowEl = $(this).closest(".routineRowCl");
                var id = rowEl.find(".routineIDCl").val();
                window.location.href = "@Url.Action("Edit", "Routine", new { area = Constants.Areas.THERAPIST })?routineId=" + id;
            });

            $("#routines-table").DataTable({
                "scrollY": "56vh",
                "scrollCollapse": false,
                "paging": false,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "columnDefs": [
                    {
                        width: "230px",
                        targets: 6
                    },
                    {
                        "targets": [6],
                        "orderable": false
                    }
                ]
            });
        });
    </script>
}